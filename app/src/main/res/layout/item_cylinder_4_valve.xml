<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/cylyinder_item"
    android:layout_margin="@dimen/small_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_four_ex_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="@string/ex_label"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ex_first_valve_label_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/item_four_ex_label_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ex_second_valve_label_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@id/item_four_ex_label_textView"
        app:layout_constraintStart_toEndOf="@+id/item_four_ex_label_textView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="ex_first_valve_label_TextView,ex_second_valve_label_TextView" />

    <TextView
        android:id="@+id/cylinder_number_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier" />

    <TextView
        android:id="@+id/in_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="@string/in_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cylinder_number_TextView" />


    <TextView
        android:id="@+id/in_first_valve_label_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="1"
        app:layout_constraintBaseline_toBaselineOf="@id/in_label_textView"
        app:layout_constraintEnd_toStartOf="@+id/in_label_textView" />

    <TextView
        android:id="@+id/in_second_valve_label_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@id/in_label_textView"

        app:layout_constraintStart_toEndOf="@+id/in_label_textView" />



</androidx.constraintlayout.widget.ConstraintLayout>