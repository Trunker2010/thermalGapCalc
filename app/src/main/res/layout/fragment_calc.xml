<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.calc.SetParamsFragment">

    <include
        android:id="@+id/engine_settings"
        layout="@layout/engine_settings_bar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/gap_params_horizontal_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="engine_settings" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cylinders_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/small_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gap_params_horizontal_barrier"
        tools:itemCount="8"
        tools:listitem="@layout/item_cylinder_4_valves" />

</androidx.constraintlayout.widget.ConstraintLayout>