<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="valve_type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="left_warp_layout">
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="warp_left_layout_style">
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="right_gap_layout">
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="right_washer_layout">
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_two_valve_layout">
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_4_valve_et">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="param_editText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:hint">@string/hint_params_mm</item>
        <item name="android:minEms">2</item>
        <item name="android:maxLength">5</item>
        <item name="android:maxEms">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="item_cylinder_param_text">
        <item name="android:layout_marginEnd">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>